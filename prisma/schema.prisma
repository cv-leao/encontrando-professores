// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teachers {
  id                 String              @id @unique @default(uuid())
  name               String
  email              String              @unique
  password           String
  matter             String
  StudentsOfATeacher StudentsOfATeacher?

  @@map("teachers")
}

model Students {
  id                 String               @id @unique @default(uuid())
  name               String
  email              String               @unique
  password           String
  StudentsOfATeacher StudentsOfATeacher[]

  @@map("students")
}

model StudentsOfATeacher {
  id          String   @id @unique @default(uuid())
  id_students String
  Students    Students @relation(fields: [id_students], references: [id])
  id_teachers String   @unique
  Teachers    Teachers @relation(fields: [id_teachers], references: [id])

  @@map("students_of_a_teacher")
}
